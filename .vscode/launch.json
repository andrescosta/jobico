    "version": "0.2.0",
    "configurations": [{
        "name": "Launch file",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${file}"
    },
    {
        "name": "Launch CLI Repo",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/tools/cmd/cli/cli.go",
        "args": [
            "repo",
            "merch1",
            "personschema",
            "./schema.json"
        ]
    },
    {
        "name": "Launch CLI Recorder",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/tools/cmd/cli/cli.go",
        "args": [
            "recorder",
            "-lines=3"
        ]
    },
    {
        "name": "Launch CLI",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/tools/cmd/cli/cli.go",
        "args": [
            "help",
        ]
    },
    {
        "name": "Launch Admin",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/tools/cmd/admin/admin.go",
        "console": "integratedTerminal"
    },
]
}